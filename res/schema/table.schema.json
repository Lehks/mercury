{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/table.schema.json",
    "definitions": {
        "table": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "meta": {
                    "$ref": "meta.schema.json#/definitions/tableMeta"
                },
                "extends": {
                    "type": "string",
                    "pattern": "@[a-zA-Z_-][a-zA-Z0-9_-]*"
                },
                "columns": {
                    "type": "object",
                    "additionalProperties": false,
                    "default": {},
                    "patternProperties": {
                        "[a-zA-Z_-][a-zA-Z0-9_-]*": {
                            "$ref": "column.schema.json#/definitions/column"
                        }
                    }
                },
                "primaryKey": {
                    "$ref": "primary-key.schema.json#/definitions/primaryKey"
                },
                "constraints": {
                    "$ref": "constraints.schema.json#/definitions/constraints"
                }
            }
        }
    }
}
