{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/database.schema.json",
    "definitions": {
        "database": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "connection": {
                    "$ref": "database-connection.schema.json#/definitions/connection"
                },
                "meta": {
                    "$ref": "meta.schema.json#/definitions/databaseMeta",
                    "default": {}
                },
                "tables": {
                    "type": "object",
                    "additionalProperties": false,
                    "default": {},
                    "patternProperties": {
                        "[a-zA-Z_-][a-zA-Z0-9_-]*": {
                            "$ref": "table.schema.json#/definitions/table"
                        }
                    }
                }
            }
        }
    }
}
