{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "database": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "connection": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["driver"],
                    "properties": {
                        "driver": {
                            "type": "string"
                        },
                        "default": {
                            "$ref": "connection-credentials.schema.json#/definitions/connectionCredentials"
                        },
                        "admin": {
                            "$ref": "connection-credentials.schema.json#/definitions/connectionCredentials"
                        }
                    }
                },
                "meta": {
                    "$ref": "meta.schema.json#/definitions/databaseMeta"
                },
                "tables": {
                    "type": "object",
                    "additionalProperties": false,
                    "default": {},
                    "patternProperties": {
                        "[a-zA-Z_-][a-zA-Z0-9_-]*": {
                            "$ref": "table.schema.json#/definitions/table"
                        }
                    }
                }
            }
        }
    }
}
