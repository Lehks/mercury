{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/type.schema.json",
    "definitions": {
        "type": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "&[a-zA-Z_-][a-zA-Z0-9_-]*"
                },
                {
                    "$ref": "types/integer.schema.json#/definitions/integer"
                },
                {
                    "$ref": "types/floating-point.schema.json#/definitions/floatingPoint"
                },
                {
                    "$ref": "types/string.schema.json#/definitions/string"
                },
                {
                    "$ref": "types/enum.schema.json#/definitions/enum"
                },
                {
                    "$ref": "types/temporal.schema.json#/definitions/temporal"
                },
                {
                    "$ref": "types/boolean.schema.json#/definitions/boolean"
                }
            ]
        }
    }
}
