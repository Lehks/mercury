{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "database-definition.schema.json",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "includes": {
            "type": "array",
            "uniqueItems": true,
            "additionalItems": false,
            "default": [],
            "items": {
                "type": "string"
            }
        },
        "databases": {
            "type": "object",
            "additionalProperties": false,
            "default": {},
            "patternProperties": {
                "[a-zA-Z_-][a-zA-Z0-9_-]*": {
                    "$ref": "database.schema.json#/definitions/database"
                }
            }
        },
        "meta": {
            "$ref": "meta.schema.json#/definitions/globalMeta"
        },
        "columnDefinitions": {
            "type": "object",
            "additionalProperties": false,
            "default": {},
            "patternProperties": {
                "#[a-zA-Z_-][a-zA-Z0-9_-]*": {
                    "$ref": "column.schema.json#/definitions/column"
                }
            }
        },
        "typeDefinitions": {
            "type": "object",
            "additionalProperties": false,
            "default": {},
            "patternProperties": {
                "&[a-zA-Z_-][a-zA-Z0-9_-]*": {
                    "$ref": "type.schema.json#/definitions/type"
                }
            }
        },
        "partialTables": {
            "type": "object",
            "additionalProperties": false,
            "default": {},
            "patternProperties": {
                "@[a-zA-Z_-][a-zA-Z0-9_-]*": {
                    "$ref": "table.schema.json#/definitions/table"
                }
            }
        }
    }
}
