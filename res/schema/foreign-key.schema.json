{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/foreign-key.schema.json",
    "definitions": {
        "foreignKey": {
            "type": "object",
            "additionalProperties": false,
            "required": ["on", "references"],
            "properties": {
                "on": {
                    "type": "string"
                },
                "references": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["table", "column"],
                    "properties": {
                        "table": {
                            "type": "string"
                        },
                        "column": {
                            "type": "string"
                        }
                    }
                },
                "onUpdate": {
                    "$ref": "#/definitions/triggerAction",
                    "default": "no-action"
                },
                "onDelete": {
                    "$ref": "#/definitions/triggerAction",
                    "default": "no-action"
                }
            }
        },
        "triggerAction": {
            "type": "string",
            "enum": ["restrict", "cascade", "set-null", "no-action", "set-default"],
            "default": "no-action"
        }
    }
}
