{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/column.schema.json",
    "definitions": {
        "column": {
            "oneOf": [
                {
                    "$ref": "#/definitions/concreteTable"
                },
                {
                    "type": "string",
                    "pattern": "#[a-zA-Z_-][a-zA-Z0-9_-]*"
                }
            ]
        },
        "concreteTable": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type"],
            "properties": {
                "type": {
                    "$ref": "type.schema.json#/definitions/type"
                },
                "nullable": {
                    "type": "boolean",
                    "default": false
                },
                "unique": {
                    "type": "boolean",
                    "default": false
                },
                "meta": {
                    "$ref": "meta.schema.json#/definitions/columnMeta",
                    "default": {}
                }
            }
        }
    }
}
