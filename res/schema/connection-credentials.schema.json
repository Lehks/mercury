{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/connection-credentials.schema.json",
    "definitions": {
        "connectionCredentials": {
            "type": "object",
            "additionalProperties": false,
            "default": {},
            "properties": {
                "credentials": {
                    "oneOf": [
                        {
                            "type": "object",
                            "additionalProperties": true,
                            "properties": {
                                "host": {},
                                "user": {},
                                "password": {}
                            }
                        },
                        {
                            "type": "string"
                        },
                        {
                            "type": "string",
                            "enum": ["ENVIRONMENT"]
                        }
                    ],
                    "default": {}
                },
                "data": {
                    "type": "object",
                    "default": {}
                }
            }
        }
    }
}
