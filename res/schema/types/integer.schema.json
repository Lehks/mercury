{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/types/integer.schema.json",
    "definitions": {
        "integer": {
            "type": "object",
            "additionalProperties": false,
            "required": ["base"],
            "properties": {
                "base": {
                    "type": "string",
                    "enum": ["small-int", "int", "big-int"]
                },
                "unsigned": {
                    "type": "boolean",
                    "default": false
                },
                "default": {
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "string",
                            "const": "auto-increment"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        }
    }
}
