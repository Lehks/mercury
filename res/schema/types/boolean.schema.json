{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/types/boolean.schema.json",
    "definitions": {
        "boolean": {
            "type": "object",
            "additionalProperties": false,
            "required": ["base"],
            "properties": {
                "base": {
                    "type": "string",
                    "const": "boolean"
                },
                "default": {
                    "oneOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        }
    }
}
