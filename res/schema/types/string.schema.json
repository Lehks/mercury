{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://lehks.github.com/mercury-js/schemas/types/string.schema.json",
    "definitions": {
        "string": {
            "type": "object",
            "additionalProperties": false,
            "required": ["base", "length"],
            "properties": {
                "base": {
                    "type": "string",
                    "enum": ["char", "var-char"]
                },
                "length": {
                    "type": "integer",
                    "minimum": 1
                },
                "default": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        }
    }
}
