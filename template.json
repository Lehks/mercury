                        "foreignKeys": {
                            "FK_users": {
                                "on": "user-id",
                                "references": {
                                    "table": "users",
                                    "column": "id"
                                },
                                "onUpdate": "cascade",
                                "onDelete": "restrict"
                            }
                        }
                    }
                }
            }
