{
    "$schema": "./res/schema/database-definition.schema.json",
    "databases": {
        "my-database": {
            "connection": {
                "driver": "driver-name",
                "default": {
                    "credentials": {
                        "host": "hostname.com",
                        "user": "user",
                        "password": "password",
                        "key1": "value1",
                        "key2": ["value", "array"]
                    }
                },
                "admin": {
                    "credentials": "./abc",
                    "data": {
                        "key1": "value1",
                        "key2": ["value", "array"]
                    }
                }
            },
            "meta": {
                "singularClassNames": true,
                "naming": {
                    "rdbmsDatabaseNameConvention": "camel-case",
                    "rdbmsTableNameConvention": "camel-case",
                    "rdbmsColumnNameConvention": "camel-case",
                    "moduleNameConvention": "camel-case",
                    "classNameConvention": "camel-case",
                    "methodNameConvention": "camel-case",
                    "constantNameConvention": "camel-case"
                },
                "rdbmsName": "test-rdbms",
                "moduleName": "test-module"
            },
            "tables": {
                "users": {
                    "meta": {
                        "singularClassNames": true,
                        "naming": {
                            "rdbmsDatabaseNameConvention": "camel-case",
                            "rdbmsTableNameConvention": "camel-case",
                            "rdbmsColumnNameConvention": "camel-case",
                            "moduleNameConvention": "camel-case",
                            "classNameConvention": "camel-case",
                            "methodNameConvention": "camel-case",
                            "constantNameConvention": "camel-case"
                        },
                        "rdbmsName": "test-rdbms",
                        "moduleName": "test-module",
                        "className": "test-class"
                    },
                    "columns": {
                        "id": "#pk",
                        "data": {
                            "type": "&my-type"
                        }
                    },
                    "primaryKey": "id"
                },
                "user-data": {
                    "meta": {
                        "className": "UserData"
                    },
                    "columns": {
                        "user-id": "#pk"
                    },
                    "primaryKey": "user-id",
                    "constraints": {
                        "foreignKeys": {
                            "FK_users": {
                                "on": "user-id",
                                "references": {
                                    "table": "users",
                                    "column": "id"
                                },
                                "onUpdate": "cascade",
                                "onDelete": "restrict"
                            }
                        }
                    }
                }
            }
        },
        "second-database": {
            "connection": {
                "driver": "postgres",
                "default": {
                    "credentials": "./path/to/file.json"
                }
            }
        }
    },
    "meta": {
        "clientOutputDir": "./",
        "sqlOutputDir": "./",
        "naming": {
            "rdbmsDatabaseNameConvention": "camel-case",
            "rdbmsTableNameConvention": "camel-case",
            "rdbmsColumnNameConvention": "camel-case",
            "moduleNameConvention": "camel-case",
            "classNameConvention": "camel-case",
            "methodNameConvention": "camel-case",
            "constantNameConvention": "camel-case"
        },
        "singularClassNames": true
    },
    "columnDefinitions": {
        "#pk": {
            "type": {
                "base": "int",
                "default": "auto-increment"
            }
        }
    },
    "typeDefinitions": {
        "&my-type": {
            "base": "float",
            "default": null
        }
    },
    "partialTables": {
        "@table": {}
    }
}
