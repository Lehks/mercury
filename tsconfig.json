{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "lib/**/*",
        "index.js"
    ],
    "exclude": [
        "node_modules",
        "test/**/*"
    ]
}